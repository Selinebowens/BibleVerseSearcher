@*
    Display list of verses for a specific book and chapter
*@

@model List<BibleVerseSearcher.Models.Verse>

@{
    ViewData["Title"] = ViewBag.BookName + " Chapter " + ViewBag.Chapter;
}

<div class="container mt-4">
    <!-- Header with book and chapter info -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@ViewBag.BookName Chapter @ViewBag.Chapter</h2>
            <p class="text-muted">@Model.Count verse(s)</p>
        </div>
        <a href="/Bible/Browse" class="btn btn-secondary">Back to Browse</a>
    </div>

    <!-- Check if any verses found -->
    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            No verses found for this chapter.
        </div>
    }
    else
    {
        <!-- Display each verse -->
        <div class="list-group">
            @foreach (var verse in Model)
            {
                <div class="list-group-item">
                    <!-- Verse reference (clickable to see details) -->
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h5 class="mb-2">
                                <a href="/Bible/VerseDetail?bookNumber=@verse.BookNumber&chapter=@verse.Chapter&verse=@verse.VerseNumber"
                                   class="text-decoration-none">
                                    @verse.BookName @verse.Chapter:@verse.VerseNumber
                                </a>
                            </h5>
                            <!-- Verse text -->
                            <p class="mb-0">@verse.Text</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
