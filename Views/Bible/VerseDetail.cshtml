@*
    Display single verse with comments
    User can read verse and add/view comments
*@

@model BibleVerseSearcher.Models.Verse

@{
    ViewData["Title"] = Model.BookName + " " + Model.Chapter + ":" + Model.VerseNumber;
}

<div class="container mt-4">
    <!-- Back button -->
    <a href="javascript:history.back()" class="btn btn-secondary mb-3">← Back</a>

    <!-- Verse Display -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.BookName @Model.Chapter:@Model.VerseNumber</h3>
        </div>
        <div class="card-body">
            <p class="lead">@Model.Text</p>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Comments Section -->
    <div class="card">
        <div class="card-header">
            <h4>Comments (@ViewBag.Comments.Count)</h4>
        </div>
        <div class="card-body">
            <!-- Add Comment Form -->
            <form method="post" action="/Bible/AddComment" class="mb-4">
                <input type="hidden" name="bookNumber" value="@Model.BookNumber" />
                <input type="hidden" name="chapter" value="@Model.Chapter" />
                <input type="hidden" name="verse" value="@Model.VerseNumber" />

                <div class="mb-3">
                    <label for="commentText" class="form-label">Add a Comment:</label>
                    <textarea name="commentText" id="commentText" class="form-control" rows="3"
                              placeholder="Enter your comment here..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>

            <hr />

            <!-- Display Existing Comments -->
            @if (ViewBag.Comments.Count == 0)
            {
                <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
            else
            {
                @foreach (var comment in ViewBag.Comments)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="mb-2">@comment.CommentText</p>
                            <small class="text-muted">
                                Posted on @comment.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </small>
                            <!-- Delete Comment Form -->
                            <form method="post" action="/Bible/DeleteComment" class="d-inline">
                                <input type="hidden" name="commentId" value="@comment.Id" />
                                <input type="hidden" name="bookNumber" value="@Model.BookNumber" />
                                <input type="hidden" name="chapter" value="@Model.Chapter" />
                                <input type="hidden" name="verse" value="@Model.VerseNumber" />
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this comment?')">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
